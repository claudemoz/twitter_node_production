extends ../layout.pug 

block content
  div(class="d-flex content justify-content-center   mx-auto")
    form(class="card w-50 mt-5" action="/users/signup" method="post")
      div(class="card-header") Inscription 
      div(class="card-body")
        div(class="form-group")
            label Username
            input(type="text" name="username" class="form-control")
        div(class="form-group")
            label Email
            input(type="email" name="email" class="form-control")
        div(class="form-group")
            label Password
            input(type="password" name="password" class="form-control")
        if errors 
          ul 
            each error in errors 
              li(class="text-danger")=error
        div(class="w-100")
          input(type="submit" value="valider" class="btn btn-primary ml-auto d-block")